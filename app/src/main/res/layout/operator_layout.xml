<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <ImageView
            style="@style/divider_style" />

        <TextView
            android:id="@+id/reset_text"
            style="@style/operator_style"
            android:text="C" />

        <ImageView
            style="@style/divider_style" />

        <TextView
            android:id="@+id/operate_0"
            style="@style/operator_style"
            android:text="/" />

        <ImageView
            style="@style/divider_style" />

        <TextView
            android:id="@+id/operate_1"
            style="@style/operator_style"
            android:text="*" />

        <ImageView
            style="@style/divider_style" />

        <TextView
            android:id="@+id/delete_text"
            style="@style/operator_style"
            android:text="delete"
            android:textSize="15sp"
            />
        <ImageView
            style="@style/divider_style" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <ImageView
            style="@style/divider_style" />

        <TextView
            android:id="@+id/text_7"
            style="@style/operator_style"
            android:text="7" />

        <ImageView
            style="@style/divider_style" />

        <TextView
            android:id="@+id/text_8"
            style="@style/operator_style"
            android:text="8" />

        <ImageView
            style="@style/divider_style" />

        <TextView
            android:id="@+id/text_9"
            style="@style/operator_style"
            android:text="9"
            />

        <ImageView
            style="@style/divider_style" />

        <TextView
            android:id="@+id/operate_2"
            style="@style/operator_style"
            android:text="-" />

        <ImageView
            style="@style/divider_style" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <ImageView
            style="@style/divider_style" />

        <TextView
            android:id="@+id/text_4"
            style="@style/operator_style"
            android:text="4" />

        <ImageView
            style="@style/divider_style" />

        <TextView
            android:id="@+id/text_5"
            style="@style/operator_style"
            android:text="5" />

        <ImageView
            style="@style/divider_style" />

        <TextView
            android:id="@+id/text_6"
            style="@style/operator_style"
            android:text="6" />

        <ImageView
            style="@style/divider_style" />

        <TextView
            android:id="@+id/operate_3"
            style="@style/operator_style"
            android:text="+" />
        <ImageView
            style="@style/divider_style" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <ImageView
            style="@style/divider_style" />

        <TextView
            android:id="@+id/text_1"
            style="@style/operator_style"
            android:text="1" />

        <ImageView
            style="@style/divider_style" />

        <TextView
            android:id="@+id/text_2"
            style="@style/operator_style"
            android:text="2" />

        <ImageView
            style="@style/divider_style" />

        <TextView
            android:id="@+id/text_3"
            style="@style/operator_style"
            android:text="3" />

        <ImageView
            style="@style/divider_style" />
        <TextView
            android:id="@+id/operate_4"
            style="@style/operator_style"
            android:text="(" />

        <ImageView
            style="@style/divider_style" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <ImageView
            style="@style/divider_style" />

        <TextView
            android:id="@+id/text_0"
            style="@style/operator_style"
            android:text="0" />

        <ImageView
            style="@style/divider_style" />

        <TextView
            android:id="@+id/operate_6"
            style="@style/operator_style"
            android:text="." />

        <ImageView
            style="@style/divider_style" />

        <TextView
            android:id="@+id/equal_text"
            style="@style/operator_style"
            android:text="=" />

        <ImageView
            style="@style/divider_style" />

        <TextView
            android:id="@+id/operate_5"
            style="@style/operator_style"
            android:text=")" />
        <ImageView
            style="@style/divider_style" />
    </LinearLayout>


</LinearLayout>